<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">purchase_view_form.purchase_view_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Purchase Order Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="DaoNguyen\PurchaseOrder\Block\Adminhtml\Purchase\Order\Edit\BackButton"/>
        </buttons>
        <namespace>purchase_view_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>purchase_view_form.purchase_view_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="purchase_view_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <dataProvider class="DaoNguyen\PurchaseOrder\Ui\Component\Form\ViewDataProvider" name="purchase_view_form_data_source">
            <settings>
                <requestFieldName>purchase_id</requestFieldName>
                <primaryFieldName>purchase_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="purchase_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>purchase_id</dataScope>
                <disabled>true</disabled>
            </settings>
        </field>
        <field name="po_number" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">PO No.</label>
                <dataScope>po_number</dataScope>
                <disabled>true</disabled>
            </settings>
        </field>
        <field name="vendor_name" sortOrder="20" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Vendor Name</label>
                <disabled>true</disabled>
                <dataScope>vendor_name</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="DaoNguyen\PurchaseOrder\Model\PurchaseOrder\Source\Vendor"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="status" sortOrder="30" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">PO Status</label>
                <disabled>true</disabled>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="DaoNguyen\PurchaseOrder\Model\PurchaseOrder\Source\Status"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="total" formElement="input" sortOrder="40">
            <settings>
                <disabled>true</disabled>
                <dataType>number</dataType>
                <dataScope>total</dataScope>
                <label translate="true">Total</label>
            </settings>
        </field>
    </fieldset>
    <fieldset name="purchase_order_items_container">
        <settings>
            <collapsible>false</collapsible>
            <label translate="true">Purchase Order Items</label>
        </settings>
        <dynamicRows name="purchase_order_items">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="identificationDRProperty" xsi:type="string">item_id</item>
                    <item name="dataProvider" xsi:type="string">purchase_order_items</item>
                </item>
            </argument>
            <settings>
                <defaultRecord>false</defaultRecord>
                <addButton>false</addButton>
                <deleteProperty>false</deleteProperty>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <componentType>dynamicRows</componentType>
                <dndConfig>
                    <param name="enabled" xsi:type="boolean">false</param>
                </dndConfig>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="positionProvider" xsi:type="string">item_id</item>
                        <item name="componentType" xsi:type="string">container</item>
                    </item>
                </argument>
                <field name="item_name" formElement="input" sortOrder="10">
                    <settings>
                        <disabled>true</disabled>
                        <dataType>text</dataType>
                        <dataScope>item_name</dataScope>
                        <label translate="true">Item Name</label>
                        <labelVisible>false</labelVisible>
                    </settings>
                </field>
                <field name="price" formElement="input" sortOrder="20">
                    <settings>
                        <disabled>true</disabled>
                        <dataType>number</dataType>
                        <dataScope>price</dataScope>
                        <label translate="true">Unit Price</label>
                        <labelVisible>false</labelVisible>
                    </settings>
                </field>
                <field name="qty" formElement="input" sortOrder="30">
                    <settings>
                        <disabled>true</disabled>
                        <dataType>number</dataType>
                        <dataScope>qty</dataScope>
                        <label translate="true">Quantity</label>
                        <labelVisible>false</labelVisible>
                    </settings>
                </field>
                <field name="row_total" formElement="input" sortOrder="40">
                    <settings>
                        <disabled>true</disabled>
                        <dataType>number</dataType>
                        <dataScope>row_total</dataScope>
                        <label translate="true">Amount</label>
                        <labelVisible>false</labelVisible>
                    </settings>
                </field>
            </container>
        </dynamicRows>
    </fieldset>
</form>
